# MCP Server Configuration
# Copy this file to .env and fill in your actual values

# MCP Server Authentication
# IMPORTANT: Change this to a strong, unique secret in production
MCP_AUTH_TOKEN=mcp_server_secret_key_change_me_in_prod

# MCP Server Network Settings
MCP_HOST=0.0.0.0
MCP_PORT=3000

# Qarnot Cloud Configuration
# Get your API token from https://account.qarnot.com
QARNOT_API_TOKEN=sk_live_your_api_token_here
QARNOT_API_URL=https://api.qarnot.com

# Logging Configuration
# LOG_LEVEL options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# LOG_FORMAT options: json (production), text (development)
LOG_FORMAT=json
